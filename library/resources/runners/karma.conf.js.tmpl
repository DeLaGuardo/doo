// karma.conf.js
module.exports = function(config) {
  // same as :output-dir
  var root =  {{ output-dir }};

  config.set({
    frameworks: ['cljs-test'],
      
    plugins: ['karma-cljs-test',
              'karma-chrome-launcher'],

    browsers: ['Chrome'],

    files: [
      root + '/goog/base.js',
      root + '/cljs_deps.js',
      {{ output-to }},
      {pattern: root + '/*.js', included: false},
      {pattern: root + '/**/*.js', included: false}
    ],
      
    autoWatchBatchDelay: 1000,
      
    logLevel: config.LOG_WARN,

    client: {
      // main function
      args: ['doo.runner.run_BANG_']
    },
    
    singleRun: true
  });
};
